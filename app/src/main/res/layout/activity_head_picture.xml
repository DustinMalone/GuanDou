<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gd.guandou.guandou.activity.HeadPictureActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@mipmap/head_bg">

        <ImageView
            android:id="@+id/iv_head_picture_back"
            android:layout_marginLeft="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:onClick="backFinish"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_t"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="设置头像"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_title"/>


    </RelativeLayout>

    <com.gd.guandou.guandou.view.CircleImageView
        android:padding="20dp"
        android:id="@+id/iv_head_picture_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/protarit"
        android:layout_weight="1"/>

    <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="#c7c7c7"
                  android:layout_height="200dp">
        <TextView
            android:layout_marginTop="35dp"
            android:id="@+id/tv_head_picture_takePhoto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@color/colorwhite"
            android:text="拍照"
            android:clickable="true"
            android:onClick="onClick"
            android:textColor="#0000ff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/tv_head_picture_choosePhoto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:onClick="onClick"
            android:background="@color/colorwhite"
            android:gravity="center"
            android:text="从相册选择"
            android:textColor="#0000ff"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
