<?xml version="1.0" encoding="utf-8"?>
<!--底部菜单栏-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
                android:background="@android:color/white"
              android:orientation="vertical"
            >
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
         android:id="@+id/ll_bottom_main"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
         android:clickable="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_sy_bottom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/index_icon"/>

        <TextView
            android:id="@+id/tv_sy_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textSize="@dimen/text_content_small"
            android:textColor="@android:color/black"
        />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_friend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="true"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_friend_bottom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/friend_icon"/>

            <TextView
                android:id="@+id/tv_friend_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友"
                android:textSize="@dimen/text_content_small"
                android:textColor="@android:color/black"
            />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_bottom_trade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_trade_bottom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/exponent_icon"/>

            <TextView
                android:id="@+id/tv_trade_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="指数"
                android:textSize="@dimen/text_content_small"
                android:textColor="@android:color/black"
            />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_bottom_my"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_my_bottom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/my_icon"/>

            <TextView
                android:id="@+id/tv_my_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的财富"
                android:textSize="@dimen/text_content_small"
                android:textColor="@android:color/black"
            />
        </LinearLayout>



    </LinearLayout>




</LinearLayout>
